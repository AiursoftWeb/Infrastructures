@model Aiursoft.EE.Models.ProfileViewModels.FollowersViewModel
@{
    ViewData["Title"] = "Followers";
}
<div class="container">
    <div class="row">
        @(await Html.PartialAsync("_Left", Model.LeftContent))
        <div class="col-md-9 mt-3">
            @(await Html.PartialAsync("_Up", Model.UpContent))
            <div class="row">
                @foreach (var fol in Model.Followers)
                {
                <div class="col-sm-12">
                    <img class="aiuruser-img mt-3" src="@ServiceLocation.OSS/download/fromkey/@(fol.Trigger.HeadImgFileKey).png" style="width: 20px; height:20px;" />
                    <a asp-controller="Profile" asp-action="Overview" asp-route-id="@fol.Trigger.UserName">
                        <h3 class="mt-3">@fol.Trigger.NickName</h3>
                    </a>
                    <p>Description lorem ipsum dolor sit amet.</p>
                </div>
                    <hr />
                }
            </div>
        </div>
    </div>
</div>