@model Aiursoft.Developer.Models.RecordsViewModels.DeleteViewModel
@{
    ViewData["Title"] = "Delete record - " + Model.RecordName;
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Apps" asp-action="Index">@Localizer["Dashboard"]</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Apps" asp-action="AllApps">@Localizer["All Apps"]</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Apps" asp-action="ViewApp" asp-route-id="@Model.AppId">@Model.AppName</a>
        </li>
        <li class="breadcrumb-item active">
            Delete record
        </li>
    </ol>

    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">x</span></button>
        <strong>@Localizer["Caution!"]</strong> Are you about to delete record "@Model.RecordName"?
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-trash ico"></i>
            @Localizer["Delete record"]
        </div>
        <div class="card-body">
            <div class="col-12">
                <form asp-controller="Records" asp-action="Delete" asp-route-appId="@Model.AppId" asp-route-recordName="@Model.RecordName" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="RecordName"></label>
                                <input asp-for="RecordName" type="text" class="form-control" readonly="readonly">
                            </div>
                        </div>

                        <div class="col-md-12 margin-top-30">
                            <a class="btn btn-success" asp-controller="Apps" asp-action="ViewApp" asp-route-id="@Model.AppId">@Localizer["Back to App"]</a>
                            <button class="btn btn-danger" data-disable-with="Deleting..." type="submit">@Localizer["Confirm to delete"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>