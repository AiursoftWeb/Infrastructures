@model Aiursoft.API.Models.PasswordViewModels.ForgotPasswordForViewModel
@{
    ViewData["Title"] = Localizer["Forgot password"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@Localizer["Forgot password"]</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>@Localizer["Forgot password"]</h4>
                <p>@Localizer["If you already know your account name, you can now reset your password via Email or SMS."]</p>
            </div>
            <form asp-controller="Password" asp-action="ForgotPasswordFor" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer["Enter your email address"]">
                </div>
                <button class="btn btn-success btn-block" data-disable-with="Checking..." type="submit">@Localizer["Next Step"]</button>
            </form>
        </div>
    </div>
</div>