
@{
    ViewData["Title"] = "Auth Error";
}
<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">@ViewData["Title"]</div>
        <div class="card-body">
            <h1 class="text-danger">@Localizer["403 - Auth error"]</h1>
            <h3>@Localizer["This app can not use our authentication system!"]</h3>
            <p>@Localizer["Sorry about it. Please try again and try to contact the app producer."]</p>
        </div>
        <a class="card-footer clearfix small z-1" href="@ServiceLocation.WWW">
            <span class="float-left">@Localizer["Back to Aiursoft.com"]</span>
            <span class="float-right">
                <i class="fa fa-angle-right"></i>
            </span>
        </a>
    </div>
</div>