@model Aiursoft.Developer.Models.AppsViewModels.AllAppsViewModel
@{
    ViewData["Title"] = "All Apps";
}
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Apps" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="row">
        @foreach (var app in Model.AllApps)
        {
            string icon = "";
            string color = "";
            switch (Math.Abs(app.AppId.GetHashCode()) % 4)
            {
                case 0:
                    icon = "server";
                    break;
                case 1:
                    icon = "adn";
                    break;
                case 2:
                    icon = "code";
                    break;
                case 3:
                    icon = "random";
                    break;
                default:
                    break;
            }
            switch (Math.Abs(app.AppSecret.GetHashCode()) % 5)
            {
                case 0:
                    color = "danger";
                    break;
                case 1:
                    color = "primary";
                    break;
                case 2:
                    color = "warning";
                    break;
                case 3:
                    color = "success";
                    break;
                case 4:
                    color = "secondary";
                    break;
                default:
                    break;
            }
            <div class="col-xl-3 col-sm-4 col-xs-12 mb-3">
                <div class="card text-white bg-@color o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fa fa-fw fa-@icon"></i>
                        </div>
                        <div class="mr-5">@Html.DisplayFor(t => app.AppName)</div>
                        <div class="mr-5 small">@Html.DisplayFor(t => app.AppDescription)</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" asp-controller="Apps" asp-action="ViewApp" asp-route-id="@app.AppId">
                        <span class="float-left">Edit Settings</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        }
        <div class="col-12 mt-3 mb-3">
            <div class="text-center">
                <a asp-controller="Apps" asp-action="CreateApp" class="btn btn-lg btn-success">Create App</a>
            </div>
        </div>
    </div>
</div>